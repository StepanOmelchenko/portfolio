mixin hero(heroType)
    section.hero
        div.hero__inner
            header.hero__header
                div.hero__socials
                    include socials
                div.hero__menu
                    include hamburger
            div.hero__container
                include info
            div(class=`${heroType}`)
                a.hero__next-link(href="#")
                    svg.hero__next-svg(width="26" height="16")
                        use(xlink:href="img/sprites/sprite.svg#arrow_down")