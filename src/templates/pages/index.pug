extends ../template

block varibles
    -var title="Welcome Page"
block content
    section(class="welcome section")
        div(class="welcome__inner")
            div(class="welcome__container")
                header(class="welcome__header")
                    a(class="welcome__header-link authorization-btn" href="#") Авторизация
                div(class="welcome__box")
                    div(class="welcome__box-inner")
                        div(class="welcome__content")
                            div(class="welcome__content-info")
                                div(class="welcome__content-wrapper")
                                    img(class="welcome__content-img" src="img/content/foto.jpg" alt="Omelchenko Stepan, web developer" hidden)
                                h1(class="welcome__content-header") Омельченко Степан
                                p(class="welcome__content-subscribe") Личный сайт веб разработчика
                            div(class="welcome__content-socials socials")
                                include ../common/socials.pug
                        nav(class="welcome-navigation")
                            ul(class="welcome-navigation__list")
                                li(class="welcome-navigation__item")
                                    a(class="welcome-navigation__link" href="works.html") Мои работы
                                li(class="welcome-navigation__item")
                                    a(class="welcome-navigation__link" href="about.html") Обо мне
                                li(class="welcome-navigation__item")
                                    a(class="welcome-navigation__link" href="blog.html") Блог
                footer(class="welcome__footer")
                    p(class="welcome__footer-signature") © Омельченко Степан | создано с любовью в LoftSchool | 2016
                    